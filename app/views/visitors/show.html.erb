<div class="row">

	<!-- Blog Entries Column -->
	<div class="col-md-8">

		<h1 class="my-4">Welcome to RTH Blog
			<small>- where words matter</small>
		</h1>

		<div class="mx-auto" style="height: 50px;"></div>

		<!-- Blog Post -->
		<div class="card mb-4">
			<img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
			<div class="card-body">
				<h2 class="card-title"><%= @post.title %></h2>
				<p class="card-text">
					<%= @post.body %>
				</p>
			</div>
			<div class="card-footer text-muted">
				Posted on <%= time_ago_in_words(@post.created_at) %> by <%= @post.user.email %>
			</div>
		</div>
	
		<div class="card mb-4">
			<div class="card-body">
				<h2 class="card-title">Comments</h2>
				<p class="card-text">
					<ul>
						<% @comments.each do |comment| %>
							<li>
								<div><strong><%= comment.user.email %>:</strong></div>
								<div><%= comment.body %></div>
							</li>
						<% end %>
					</ul>
				</p>
			</div>
		</div>
	
		<% if user_signed_in? %>
		<div class="card mb-4">
			<div class="card-body">
				<h2 class="card-title">Add new comment:</h2>
				<p class="card-text">
			    <form action="/comments" method="post">
			    	<input type="hidden" value="<%= form_authenticity_token() %>" name="authenticity_token"/>
		        <div class="form-group">
		  				<textarea class="form-control" rows="5" id="comment" name="comment[body]"></textarea>
						</div>
		        <div class="form-group">
		  				<input type="hidden" name="comment[post_id]" class="form-control" value="<%= @post.id %>">
		  				<input type="hidden" name="from" class="form-control" value="post">
						</div>
			      <button class="btn btn-primary" type="submit">Submit</button>
			    </form>
				</p>
			</div>
		</div>
		<% end %>
	</div>

	<!-- Sidebar Widgets Column -->
	<div class="col-md-4">
		<div class="mx-auto" style="height: 95px;"></div>

		<!-- Search Widget -->
		<div class="card my-4">
			<h5 class="card-header">Search</h5>
			<div class="card-body">
				<form action="/">
					<div class="input-group" style="width: 90%">
						<input type="text" name="str" class="form-control" placeholder="">
						<span class="input-group-btn">
							<button class="btn btn-secondary" type="submit">Go!</button>
						</span>
					</div>
				</form>
			</div>
		</div>

		<!-- Sort Widget -->
		<div class="card my-4">
			<h5 class="card-header">View Latest Posts</h5>
			<div class="card-body">
				<form action="/">
					<div class="input-group" style="width: 90%">
						<input type="hidden" name="view" class="form-control" value="latest">
						<span class="input-group-btn">
							<button class="btn btn-secondary" type="submit">Go!</button>
						</span>
					</div>
				</form>
			</div>
		</div>

		<!-- Categories Widget -->
		<div class="card my-4">
			<h5 class="card-header">Categories</h5>
			<div class="card-body">
				<div class="row">
					<div class="col-lg-6">
						<ul class="list-unstyled mb-0">
							<% @categories[0..4].each do |category| %>
							<li>
								<a href="#"><%= category.name %></a>
							</li>
							<% end %>
						</ul>
					</div>
					<div class="col-lg-6">
						<ul class="list-unstyled mb-0">
							<% @categories[5..9].each do |category| %>
							<li>
								<a href="#"><%= category.name %></a>
							</li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Side Widget -->
		<div class="card my-4">
			<h5 class="card-header">More Info</h5>
			<div class="card-body">
				You can put anything you want inside of these side widgets. Such as company latest news, training program, job vacancies, advertising,...
			</div>
		</div>

		<div class="card my-4">
			<h5 class="card-header">More Info</h5>
			<div class="card-body">
				You can put anything you want inside of these side widgets. Such as company latest news, training program, job vacancies, advertising,...
			</div>
		</div>

		<div class="card my-4">
			<h5 class="card-header">More Info</h5>
			<div class="card-body">
				You can put anything you want inside of these side widgets. Such as company latest news, training program, job vacancies, advertising,...
			</div>
		</div>
	</div>

</div>
    <!-- /.row -->