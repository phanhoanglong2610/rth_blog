<div class="row">

	<!-- Blog Entries Column -->
	<div class="col-md-8">

		<h1 class="my-4">Welcome to RTH Blog
			<small>- where words matter</small>
		</h1>

		<div class="mx-auto" style="height: 50px;"></div>

		<!-- Blog Post -->
		<% @posts.each do |post| %>
		<div class="card mb-4">
			<img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
			<div class="card-body">
				<h2 class="card-title"><%= post.title %></h2>
				<p class="card-text">
					<%= post.body.slice(0, 150) %>...
				</p>
				<a href="#" class="btn btn-primary">Read More &rarr;</a>
			</div>
			<div class="card-footer text-muted">
				Posted on <%= time_ago_in_words(post.created_at) %> by <%= post.user.email %>
			</div>
		</div>
		<% end %>

	</div>

	<!-- Sidebar Widgets Column -->
	<div class="col-md-4">
		<div class="mx-auto" style="height: 95px;"></div>

		<!-- Search Widget -->
		<div class="card my-4">
			<h5 class="card-header">Search</h5>
			<div class="card-body">
				<form action="/">
					<div class="input-group" style="width: 90%">
						<input type="text" name="str" class="form-control" placeholder="">
						<span class="input-group-btn">
							<button class="btn btn-secondary" type="submit">Go!</button>
						</span>
					</div>
				</form>
			</div>
		</div>

		<!-- Categories Widget -->
		<div class="card my-4">
			<h5 class="card-header">Categories</h5>
			<div class="card-body">
				<div class="row">
					<div class="col-lg-6">
						<ul class="list-unstyled mb-0">
							<% @categories[0..4].each do |category| %>
							<li>
								<a href="#"><%= category.name %></a>
							</li>
							<% end %>
						</ul>
					</div>
					<div class="col-lg-6">
						<ul class="list-unstyled mb-0">
							<% @categories[5..9].each do |category| %>
							<li>
								<a href="#"><%= category.name %></a>
							</li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Side Widget -->
		<div class="card my-4">
			<h5 class="card-header">More Info</h5>
			<div class="card-body">
				You can put anything you want inside of these side widgets. Such as company latest news, training program, job vacancies,...
			</div>
		</div>

		<div class="card my-4">
			<h5 class="card-header">More Info</h5>
			<div class="card-body">
				You can put anything you want inside of these side widgets. Such as company latest news, training program, job vacancies,...
			</div>
		</div>

		<div class="card my-4">
			<h5 class="card-header">More Info</h5>
			<div class="card-body">
				You can put anything you want inside of these side widgets. Such as company latest news, training program, job vacancies,...
			</div>
		</div>
	</div>

</div>
    <!-- /.row -->